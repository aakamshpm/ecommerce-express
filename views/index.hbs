<section class="container mt-3">
  <div class="row">
    {{#each products}}
      <div class="col-md-3 card">
        <img
          height="360px"
          src={{this.imageUrl}}
          class="card-img-top"
          alt="..."
        />
        <div class="card-body">
          <h5 class="card-title">{{this.name}}</h5>
          <p class="card-text">{{this.description}}</p>
          <a href="#" class="btn btn-primary">Add to Cart</a>
        </div>
      </div>
    {{/each}}
  </div>
</section>